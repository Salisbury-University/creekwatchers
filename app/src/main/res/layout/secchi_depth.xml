<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/riverbg5">

    <TextView
        android:id="@+id/wt_title_meas3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/gold"
        android:elevation="25dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="@color/gold"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/sd_title_meas1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/wtgl50h" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/finishGreen"
        android:elevation="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sdgl25v"
        app:layout_constraintStart_toStartOf="@+id/sdgl25v"
        app:layout_constraintTop_toTopOf="@+id/sdgl90h" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/finishGreen"
        android:elevation="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sdgl75v"
        app:layout_constraintTop_toTopOf="@+id/sdgl90h" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sdgl25v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sdgl75v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sdgl10h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sdgl50h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/sdgl90h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/atdgl50h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/atdgl30h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/atdgl70h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <TextView
        android:id="@+id/sd_title_meas1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#B90B0404"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="MEASUREMENT 1"
        android:textColor="@color/gold"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/atdgl30h"
        app:layout_constraintTop_toTopOf="@+id/sdgl10h"
        tools:layout_editor_absoluteX="150dp" />

    <LinearLayout
        android:id="@+id/secchiLL1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#A8000000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/sdgl50h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/atdgl30h">

        <EditText
            android:id="@+id/secchiEdit1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:hint="0.0"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="@color/gold"
            android:textColorHint="@color/gold"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/secchi1_measurement_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:text="cm"
            android:textColor="@color/gold"
            android:textSize="35sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/secchititle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:fontFamily="@font/architects_daughter"
        android:gravity="center"
        android:text="SECCHI DEPTH"
        android:textColor="@color/gold"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/sdgl10h"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />


    <TextView
        android:id="@+id/sd_title_meas2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#B90B0404"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="MEASUREMENT 2"
        android:textColor="@color/gold"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/atdgl70h"
        app:layout_constraintTop_toTopOf="@+id/atdgl50h" />

    <LinearLayout
        android:id="@+id/secchiLL2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#A8000000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/sdgl90h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/atdgl70h">

        <EditText
            android:id="@+id/secchiEdit2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:hint="0.0"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:textColor="@color/gold"
            android:textColorHint="@color/gold"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/secchi2_measurement_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:text="cm"
            android:textColor="@color/gold"
            android:textSize="35sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/secchihome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black"
        android:fontFamily="@font/architects_daughter"
        android:gravity="center"
        android:text="MENU"
        android:textColor="@color/gold"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sdgl75v"
        app:layout_constraintStart_toStartOf="@+id/sdgl25v"
        app:layout_constraintTop_toTopOf="@+id/sdgl90h" />

    <ImageView
        android:id="@+id/secchi_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#DA000000"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/sdgl25v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sdgl90h"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

    <ImageView
        android:id="@+id/secchi_next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#DA000000"
        android:padding="8dp"
        android:rotationY="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/sdgl75v"
        app:layout_constraintTop_toTopOf="@+id/sdgl90h"
        app:srcCompat="@drawable/baseline_arrow_back_ios_24" />


</androidx.constraintlayout.widget.ConstraintLayout>