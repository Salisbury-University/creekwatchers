<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_main"
    tools:context=".XmlPage">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.8" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <TextView
        android:id="@+id/estimateTitle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/maroon"

        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="Water Surface"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/gold"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/home_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/maroon"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="Home"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/gold"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/guideline3" />

    <ImageView
        android:id="@+id/leftbutton_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <ImageView
        android:id="@+id/rightbutton_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/gold"
        android:rotationX="0"
        android:rotationY="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:srcCompat="?attr/actionModeCloseDrawable" />

    <ImageView
        android:id="@+id/calm_background"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:src="@drawable/color_cursor"
        app:layout_constraintBottom_toBottomOf="@+id/calm_button"
        app:layout_constraintEnd_toEndOf="@+id/calm_button"
        app:layout_constraintStart_toStartOf="@+id/calm_button"
        app:layout_constraintTop_toTopOf="@+id/calm_button"
        app:srcCompat="@color/white" />

    <ImageView
        android:id="@+id/calm_image"
        android:layout_width="166dp"
        android:layout_height="149dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/surface_calm"
        app:layout_constraintEnd_toEndOf="@+id/calm_button"
        app:layout_constraintStart_toStartOf="@+id/calm_button"
        app:layout_constraintTop_toTopOf="@+id/calm_button"
        app:srcCompat="@drawable/surface_calm" />

    <TextView
        android:id="@+id/calm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Calm"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/calm_button"
        app:layout_constraintEnd_toEndOf="@+id/calm_button"
        app:layout_constraintStart_toStartOf="@+id/calm_button"
        app:layout_constraintTop_toTopOf="@+id/calm_button"
        app:layout_constraintVertical_bias="0.92" />

    <Button
        android:id="@+id/calm_button"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/guideline32"
        app:layout_constraintEnd_toStartOf="@+id/guideline31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline28"
        app:strokeColor="#0E0404"
        app:strokeWidth="1dp" />

    <ImageView
        android:id="@+id/ripples_background"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:src="@drawable/color_cursor"
        app:layout_constraintBottom_toBottomOf="@+id/ripples_button"
        app:layout_constraintEnd_toEndOf="@+id/ripples_button"
        app:layout_constraintStart_toStartOf="@+id/ripples_button"
        app:layout_constraintTop_toTopOf="@+id/ripples_button"
        app:srcCompat="@color/white" />

    <ImageView
        android:id="@+id/ripples_image"
        android:layout_width="169dp"
        android:layout_height="162dp"
        android:src="@drawable/surface_ripples2"
        app:layout_constraintBottom_toBottomOf="@+id/ripples_button"
        app:layout_constraintEnd_toEndOf="@+id/ripples_button"
        app:layout_constraintStart_toStartOf="@+id/ripples_button"
        app:layout_constraintTop_toTopOf="@+id/ripples_button"
        app:layout_constraintVertical_bias="0.07999998"
        app:srcCompat="@drawable/surface_ripples2" />

    <TextView
        android:id="@+id/ripples_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Ripples"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ripples_button"
        app:layout_constraintEnd_toEndOf="@+id/ripples_button"
        app:layout_constraintStart_toStartOf="@+id/ripples_button"
        app:layout_constraintTop_toTopOf="@+id/ripples_button"
        app:layout_constraintVertical_bias="0.92" />

    <Button
        android:id="@+id/ripples_button"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/guideline32"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline31"
        app:layout_constraintTop_toTopOf="@+id/guideline28"
        app:strokeColor="#0E0404"
        app:strokeWidth="1dp" />

    <ImageView
        android:id="@+id/choppy_background"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:src="@drawable/color_cursor"
        app:layout_constraintBottom_toBottomOf="@+id/choppy_button"
        app:layout_constraintEnd_toEndOf="@+id/choppy_button"
        app:layout_constraintStart_toStartOf="@+id/choppy_button"
        app:layout_constraintTop_toTopOf="@+id/choppy_button"
        app:srcCompat="@color/white" />

    <ImageView
        android:id="@+id/choppy_image"
        android:layout_width="172dp"
        android:layout_height="175dp"
        android:src="@drawable/surface_choppy"
        app:layout_constraintBottom_toBottomOf="@+id/choppy_button"
        app:layout_constraintEnd_toEndOf="@+id/choppy_button"
        app:layout_constraintStart_toStartOf="@+id/choppy_button"
        app:layout_constraintTop_toTopOf="@+id/choppy_button"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/surface_choppy" />

    <TextView
        android:id="@+id/choppy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Choppy"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/choppy_button"
        app:layout_constraintEnd_toEndOf="@+id/choppy_button"
        app:layout_constraintStart_toStartOf="@+id/choppy_button"
        app:layout_constraintTop_toTopOf="@+id/choppy_button"
        app:layout_constraintVertical_bias="0.92" />

    <Button
        android:id="@+id/choppy_button"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/guideline29"
        app:layout_constraintEnd_toStartOf="@+id/guideline31"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline32"
        app:strokeColor="#0E0404"
        app:strokeWidth="1dp" />

    <ImageView
        android:id="@+id/heavychop_background"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:src="@drawable/color_cursor"
        app:layout_constraintBottom_toBottomOf="@+id/heavychop_button"
        app:layout_constraintEnd_toEndOf="@+id/heavychop_button"
        app:layout_constraintStart_toStartOf="@+id/heavychop_button"
        app:layout_constraintTop_toTopOf="@+id/heavychop_button"
        app:srcCompat="@color/white" />

    <TextView
        android:id="@+id/heavychop_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Heavy Chop"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/heavychop_button"
        app:layout_constraintEnd_toEndOf="@+id/heavychop_button"
        app:layout_constraintStart_toStartOf="@+id/heavychop_button"
        app:layout_constraintTop_toTopOf="@+id/heavychop_button"
        app:layout_constraintVertical_bias="0.92" />

    <ImageView
        android:id="@+id/heavychop_image"
        android:layout_width="167dp"
        android:layout_height="146dp"
        android:src="@drawable/surface_verychoppy"
        app:layout_constraintBottom_toBottomOf="@+id/heavychop_button"
        app:layout_constraintEnd_toEndOf="@+id/heavychop_button"
        app:layout_constraintStart_toStartOf="@+id/heavychop_button"
        app:layout_constraintTop_toTopOf="@+id/choppy_button"
        app:layout_constraintVertical_bias="0.19"
        app:srcCompat="@drawable/surface_verychoppy" />

    <Button
        android:id="@+id/heavychop_button"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/guideline29"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline31"
        app:layout_constraintTop_toTopOf="@+id/guideline32"
        app:strokeColor="#0E0404"
        app:strokeWidth="1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>