<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="`http`://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".SelectSite">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/selSiteBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@drawable/rivergif2"
        android:scaleType="centerCrop"></pl.droidsonroids.gif.GifImageView>

    <Button
        android:id="@+id/siteTB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#81FFC420"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minHeight="0dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Select Your Site"
        android:textAlignment="center"
        android:textColor="@color/maroon"
        android:textSize="20sp"
        tools:layout_editor_absoluteY="1dp" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/selSiteBg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/siteTB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#998A0000"
                android:minHeight="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:text="Site 1"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="20sp" />

            <Button
                android:id="@+id/siteBtn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#998A0000"
                android:minHeight="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:text="Button"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="20sp" />

            <Button
                android:id="@+id/siteBtn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#998A0000"
                android:minHeight="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:text="Button"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="20sp" />

            <Button
                android:id="@+id/siteBtn4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#998A0000"
                android:minHeight="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:text="Button"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="20sp" />

            <Button
                android:id="@+id/siteBtn5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#998A0000"
                android:minHeight="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:text="Button"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="20sp" />

            <Button
                android:id="@+id/siteBtn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#998A0000"
                android:minHeight="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:text="Site 6"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="20sp" />

            <Button
                android:id="@+id/siteBtn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#998A0000"
                android:minHeight="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:text="Button"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="20sp" />

            <Button
                android:id="@+id/siteBtn8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:backgroundTint="#998A0000"
                android:minHeight="0dp"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:text="Button"
                android:textAlignment="center"
                android:textColor="@color/gold"
                android:textSize="20sp" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>