<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@color/black"
    android:backgroundTint="@color/black"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="Did you use a tube?"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <RadioGroup
        android:id="@+id/tubeRadio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tubeT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/gold"
            android:checked="false"
            android:text="Yes"
            android:textSize="25sp"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/tubeF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:buttonTint="@color/gold"
            android:checked="true"
            android:text="No"
            android:textSize="25sp"
            android:textColor="@android:color/white" />

    </RadioGroup>

    <TextView
        android:id="@+id/variables"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="Are you sure these values are accurate:"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tube_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="monospace"
        android:text="Water Depth:"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/waterDepthInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="monospace"
            android:hint="Enter new value"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColorHint="@color/gold"
            android:textColor="@color/gold"
            android:textSize="25sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="(cm)"
            android:textColor="@color/gold"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tube_sec1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="monospace"
        android:text="Secchi Depth 1:"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/secchiDepthIn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="monospace"
            android:hint="Enter new value"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColorHint="@color/gold"
            android:textColor="@color/gold"
            android:textSize="25sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="(cm)"
            android:textColor="@color/gold"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tube_sec2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:fontFamily="monospace"
        android:text="Secchi Depth 2:"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/secchiDepthIn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:fontFamily="monospace"
            android:hint="Enter new value"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:layout_weight="1"
            android:textColorHint="@color/gold"
            android:textColor="@color/gold"
            android:textSize="25sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:text="(cm)"
            android:textColor="@color/gold"
            android:textSize="25sp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tube_proceed"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded"
        android:padding="10dp"
        android:text="Proceed"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp" />

</LinearLayout>